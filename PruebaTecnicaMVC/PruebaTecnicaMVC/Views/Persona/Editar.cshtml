@model PruebaTecnicaMVC.Models.Persona

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>Editando persona</h2>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Actualizar", "Persona")" method="post">

                    <input type="hidden" class="form-control" name="id" value="@Html.DisplayTextFor(m => m.Id)" />
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="nombre" value="@Html.DisplayTextFor(m => m.Nombre)" />
                    </div>

                    <div class="form-group">
                        <label>Edad</label>
                        <input type="number" class="form-control" name="edad" value="@Html.DisplayTextFor(m => m.Edad)" />
                    </div>

                    <div class="form-group">
                        <label>Sexo</label>
                        <select class="form-control" name="sexo" value="@Html.DisplayTextFor(m => m.Sexo)">
                            <option>Seleccione uno</option>
                            @if (Model != null)
                            {
                                if (Model.Sexo == 1)
                                {
                                    <option selected="selected" value="1">Masculino</option>

                                }
                                else
                                {
                                    <option value="1">Masculino</option>

                                }

                                if (Model.Sexo == 2)
                                {
                                    <option selected="selected" value="2">Femenino</option>

                                }
                                else
                                {
                                    <option value="2">Femenino</option>

                                }

                                if (Model.Sexo == 3)
                                {
                                    <option selected="selected" value="3">No especificado</option>

                                }
                                else
                                {
                                    <option value="3">No especificado</option>

                                }
                            }
                        </select>
                    </div>


                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" value="@Html.DisplayTextFor(m => m.Email)" />
                    </div>

                    <button type="submit" class="btn btn-success">Guardar</button>

                    <a class="btn btn-warning" href="@Url.Action("Index","Persona")">Atras</a>
                </form>
            </div>
        </div>
    </div>
</div>

